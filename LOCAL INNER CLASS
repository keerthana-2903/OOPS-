class Outer{
    public void display(){
        class Inner{
            public void show(){
                System.out.println("hi");
            }
        }
//        Inner i=new Inner();
//        i.show();

        //another way to access
        new Inner().show();

    }
}
public class Main {
    public static void main(String[] args){
        Outer o=new Outer();
        o.display();
    }
}
